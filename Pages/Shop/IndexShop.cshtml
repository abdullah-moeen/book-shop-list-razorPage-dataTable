@page
@model BookListRazor.IndexShopModel

<div class="row">
    <h3 class="col-6 text-info">Shop List</h3>

    <div class="col-3">
        <a class="btn btn-info text-white form-control">
            Create New Shop
        </a>
    </div>
    <div class="col-3">
        <a class="btn btn-info text-white form-control">
            Add (Upsert) New Shop
        </a>
    </div>
</div>
<br />
<div class="border container" style="padding: 20px">
    <table class="table table-striped border">
        <tr class="table table-secondary">
            <th>
                <label asp-for="Shop.FirstOrDefault().ShopName"></label>
            </th>
            <th>
                <label asp-for="Shop.FirstOrDefault().Owner"></label>
            </th>
            <th>
                <label asp-for="Shop.FirstOrDefault().ISBN"></label>
            </th>
            <th>
                <label>
                    Actions
                </label>
            </th>
        </tr>
        @foreach (var item in Model.Shop)
        {
            <tr>
                <td>@item.ShopName</td>
                <td>@item.Owner</td>
                <td>@item.ISBN</td>
                <td>
                    <button asp-page-handler="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</button>
                    <a asp-page="EditShop" asp-route-id="@item.ID" class="btn btn-success">Edit</a>
                </td>
            </tr>
        }
    </table>
</div>


@section Scripts{
    <script src="~/js/bookList.js"></script>
}